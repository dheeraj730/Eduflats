{% extends "::base.html.twig" %}

{% block title %}register university{% endblock %}

{% block body %}
    <div class="col-sm-6 col-sm-offset-1">
             {{ form_start(form, {attr:{novalidate: 'novalidate'}}) }}
            <table>
                 <tr>
                    <td align="left">{{form_label(form.tUniversityName)}}</td>
                    <td>{{form_widget(form.tUniversityName)}}</td>
                    <td>{{form_errors(form.tUniversityName)}}</td>
                </tr>
                <tr>
                    <td align="left">{{form_label(form.tSubdomainName)}}</td>
                    <td>{{form_widget(form.tSubdomainName)}}</td>
                    <td>{{form_errors(form.tSubdomainName)}}</td>
                </tr>
            </table>
            {{form_end(form)}}
    </div>
{% endblock %}
