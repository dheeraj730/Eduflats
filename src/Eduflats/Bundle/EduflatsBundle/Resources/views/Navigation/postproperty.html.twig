{% extends "EduflatsBundle:Home:home.html.twig"%}

{% block title %}property detail{% endblock %}
{% block body %}   
    
    <style>
        input[type="checkbox"]{
            width: inherit;
        }
        input[type="checkbox"] + label{
            margin-left: 10px;
            max-width: 31%;
            width: 31%;
        }
    </style>
    
    
<div id="ct-js-wrapper" class="ct-pageWrapper" style="transition: all 0.3s ease;">
<div class="ct-site--map">
    <div class="container">
        <a href="">Home</a>
        <a href="">Submit Property</a>
    </div>
</div>
<section class="ct-u-paddingTop50 ct-u-paddingBottom100">
    <div class="container">
        <div class="ct-headerText--normal text-uppercase ct-u-marginBottom40">
            <h2>Property Details <span class="ct-text--highlightGray"> Price &amp; Amenities</span></h2>
        </div>
        {{ form(form) }}
        <div class="row">
            <div class="col-md-8 col-lg-12">
                <form role="form" class="ct-formSubmission">
                    <div class="form-group ">
                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Set price of your property</label>
                        <div class="row">
                            <div class="col-md-9">
                                <input type="text" required="" class="form-control input-lg ct-input--border ct-u-marginBottom20" placeholder="">
                            </div>
                            <div class="col-md-3">
                                <select class="ct-js-select ct-select2--light ct-select-lg">
                                    <option value="usd">USD</option>
                                    <option value="euro">EURO</option>
                                    <option value="pound">POUND</option>
                                </select>
                            </div>
                        </div>
                        <div class="ct-u-marginBottom40">
                            <div class="ct-radio--items ct-radio--custom ct-radio--customInline">
                                <input id="sale" type="radio" name="sale" value="sale">
                                <label for="sale">For Sale</label>
                            </div>
                            <div class="ct-radio--items ct-radio--custom ct-radio--customInline">
                                <input id="weekly" type="radio" name="sale" value="sale">
                                <label for="weekly">Weekly</label>
                            </div>
                            <div class="ct-radio--items ct-radio--custom ct-radio--customInline">
                                <input id="monthly" type="radio" name="sale" value="sale">
                                <label for="monthly">Monthly</label>
                            </div>
                        </div>
                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Property summary</label>
                        <div class="row ct-u-marginBottom50">
                            <div class="col-md-6">
                                <span class="span ct-u-marginBottom10">Area</span>
                                <input type="text" required="" class="form-control input-lg ct-input--border ct-u-marginBottom20" placeholder="">
                                <span class="span ct-u-marginBottom10">Type</span>
                                <select class="ct-js-select ct-select2--light ct-select-lg ct-u-marginBottom20">
                                    <option value="0">-</option>
                                    <option value="1">Houses</option>
                                    <option value="2">Industrial</option>
                                    <option value="3">Retail</option>
                                    <option value="4">Apartments</option>
                                </select>
                                <span class="span ct-u-marginBottom10">Baths</span>
                                <select class="ct-js-select ct-select2--light ct-select-lg ct-u-marginBottom20">
                                    <option value="0">-</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3+</option>
                                </select>
                                <span class="span ct-u-marginBottom10">Garage</span>
                                <select class="ct-js-select ct-select2--light ct-select-lg">
                                    <option value="0">-</option>
                                    <option value="yes">yes</option>
                                    <option value="no">no</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <span class="span ct-u-marginBottom10">Area Units</span>
                                <select class="ct-js-select ct-select2--light ct-select-lg ct-u-marginBottom20">
                                    <option value="0">-</option>
                                    <option value="m2">m2</option>
                                    <option value="km2">km2</option>
                                </select>
                                <span class="span ct-u-marginBottom10">Beds</span>
                                <select class="ct-js-select ct-select2--light ct-select-lg ct-u-marginBottom20">
                                    <option value="0">-</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3+</option>
                                </select>
                                <span class="span ct-u-marginBottom10">Kitchens</span>
                                <select class="ct-js-select ct-select2--light ct-select-lg ct-u-marginBottom20">
                                    <option value="0">-</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3+</option>
                                </select>
                                <span class="span ct-u-marginBottom10">Pool</span>
                                <select class="ct-js-select ct-select2--light ct-select-lg">
                                    <option value="0">-</option>
                                    <option value="yes">yes</option>
                                    <option value="no">no</option>
                                </select>
                            </div>
                        </div>
                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom20">Amenites <span>Please check what applies</span></label>
                        <div class="ct-u-displayTable ct-radio--items ct-u-marginBottom40">
                            <div class="ct-u-displayTableCell">
                                <div class="ct-checbox--custom">
                                    <input type="checkbox" value="None" id="ct-checbox--custom" name="check">
                                    <label for="ct-checbox--custom"></label>
                                    <span> Air Conditioning</span>
                                </div>
                                <div class="ct-checbox--custom">
                                    <input type="checkbox" value="None" id="ct-checbox--custom2" name="check">
                                    <label for="ct-checbox--custom2"></label>
                                    <span>  ADSL Cable</span>
                                </div>
                                <div class="ct-checbox--custom">
                                    <input type="checkbox" value="None" id="ct-checbox--custom3" name="check">
                                    <label for="ct-checbox--custom3"></label>
                                    <span>  WiFi</span>
                                </div>
                                <div class="ct-checbox--custom">
                                    <input type="checkbox" value="None" id="ct-checbox--custom4" name="check">
                                    <label for="ct-checbox--custom4"></label>
                                    <span> HiFi Audio</span>
                                </div>
                            </div>
                            <div class="ct-u-displayTableCell ct-radio--items">
                                <div class="ct-checbox--custom">
                                    <input type="checkbox" value="None" id="ct-checbox--custom5" name="check">
                                    <label for="ct-checbox--custom5"></label>
                                    <span> Fridge</span>
                                </div>
                                <div class="ct-checbox--custom">
                                    <input type="checkbox" value="None" id="ct-checbox--custom6" name="check">
                                    <label for="ct-checbox--custom6"></label>
                                    <span>  Grill</span>
                                </div>
                                <div class="ct-checbox--custom">
                                    <input type="checkbox" value="None" id="ct-checbox--custom7" name="check">
                                    <label for="ct-checbox--custom7"></label>
                                    <span>  Full HD TV</span>
                                </div>
                                <div class="ct-checbox--custom">
                                    <input type="checkbox" value="None" id="ct-checbox--custom8" name="check">
                                    <label for="ct-checbox--custom8"></label>
                                    <span> Digital Antenna</span>
                                </div>
                            </div>
                            <div class="ct-u-displayTableCell ct-radio--items">
                                <div class="ct-checbox--custom">
                                    <input type="checkbox" value="None" id="ct-checbox--custom9" name="check">
                                    <label for="ct-checbox--custom9"></label>
                                    <span> Kitchen With Island</span>
                                </div>
                                <div class="ct-checbox--custom">
                                    <input type="checkbox" value="None" id="ct-checbox--custom10" name="check">
                                    <label for="ct-checbox--custom10"></label>
                                    <span>  Exotic Garden</span>
                                </div>
                                <div class="ct-checbox--custom">
                                    <input type="checkbox" value="None" id="ct-checbox--custom11" name="check">
                                    <label for="ct-checbox--custom11"></label>
                                    <span>  Guest House</span>
                                </div>
                            </div>
                        </div>
                        
                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Property description</label>
                        <textarea placeholder="" class="form-control input-lg ct-input--border ct-u-marginBottom40" name="field[]" required=""></textarea>
                        <label class="ct-fw-600 text-uppercase ct-u-marginBottom10">Mark on map <span>You can drag & drop marker</span></label>
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3887.8132927197153!2d77.55192431442957!3d12.983790618124598!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bae3df3b9cd3a87%3A0x447681740eba7fce!2sBashyam+Circle+Bus+Stop!5e0!3m2!1sen!2sin!4v1455093993995" width="100%" height="400" frameborder="0" style="border:0" allowfullscreen></iframe>
                        <br/><br/><h5 class="ct-u-marginBottom10">GPS Data</h5>
                        <div class="ct-latlngAuto">
                            <input type="text" required class="form-control input-lg ct-input--border ct-u-marginBottom10 latidude" placeholder="Latidude">
                            <input type="text" required class="form-control input-lg ct-input--border ct-u-marginBottom50 longitude" placeholder="Longitude">
                        </div>
                        <div class="ct-container--Big">
                            <a class="btn pull-left" href="">Read Tearms and conditions</a>
                            <a class="btn btn-warning pull-right" href="">Submit</a>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
</div>

{% endblock %}