{% extends baseLayout %}

{% block title %}Admin{% endblock %}

{% block body %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        input{
            width:inherit;
        }
    </style>
{% endblock %}

{% block form %}
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <a href="{{ path('logout')}}">logout</a>
    {% else %}
        <a href="{{ path('loginForm')}}">login</a>
    {% endif %}    
    {{ form_start(form, {attr:{novalidate: 'novalidate'}}) }}
   
    {{form_end(form)}}
{% endblock %}